{% block content %}
<div class="row">
  <div class="col-lg-12 text-center">
    <h1>All people</h1>
    <p class="lead">Search, filter and have fun!</p>
  </div>
</div>

<div>
  <table id="table_id" class="table table-striped table-bordered" cellspacing="0" style="width:100%">
    <thead>
      <tr>
        <th>Last name</th>
        <th>First name</th>
        <th>Phone number</th>
        <th>Email</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for row in table_rows %}
      <tr>
        {% for cell in row[1:-1] %}
        <td>{{ cell }}</td>
        {% endfor %}
        <td>
          <a href="{{ url_for('persons.get', person_id=row[0]) }}" class="btn btn-success btn-sm">
            View <i class="fa fa-chevron-right"></i>
          </a>
          {% if row[-1] %}
          <i class="fa fa-tag" style="color:mediumvioletred"></i>
          {% endif %}
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}