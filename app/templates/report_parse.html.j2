{% extends "base.html.j2" %}
{% block title %}Parse Poynt Reports{% endblock %}

{% block scripts %}
{% endblock %}

{% block content %}
<div class="row">
  <div class="col-lg-12 text-center">
    <h1>Parsed report</h1>
    <p class="lead">Here are is the aggregated data from the reports that you provided.</p>
  </div>
</div>

<div>
  <table id="table_id" class="table table-striped table-bordered" cellspacing="0" style="width:100%">
    <thead>
      <tr>
        <th>Item</th>
        <th>Transaction type</th>
        <th>Total for the period</th>
      </tr>
    </thead>
    <tbody>
      {% for (item, typ), total in report.items() %}
      <tr>
        <td>{{ item }}</td>
        <td>{{ typ }}</td>
        <td>{{ total | currency_format }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}