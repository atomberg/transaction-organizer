{% extends "base.html.j2" %}
{% block title %}Parse Poynt Reports{% endblock %}

{% block scripts %}
<script type="text/javascript">
    $("#transactions_table").DataTable({
      "stateSave": true,
      "lengthMenu": [10, 20, 50],
      "order": [],
      "infoCallback": function( settings, start, end, max, total, pre ) {
        var api = this.api();
        var totalAmount = api.column( 2, { page: 'current' } ).data().reduce( 
          function (a, b) { return a + parseFloat(b); }, 0.0 
        );
        return 'Showing ' + start + ' to ' + end + ' of ' + total + ' entries ' + 
          '(total amount of $' + totalAmount.toFixed(2) + ')';
      }
    });
</script>
{% endblock %}

{% block content %}
<div class="row">
  <div class="col-lg-12 text-center">
    <h1>Parsed report</h1>
    <p class="lead">Here are is the aggregated data from the reports that you provided.</p>
  </div>
</div>

<div>
  <table id="transactions_table" class="table table-striped table-bordered" cellspacing="0" style="width:100%">
    <thead>
      <tr>
        <th>Item</th>
        <th>Transaction type</th>
        <th>Total for the period</th>
      </tr>
    </thead>
    <tbody>
      {% for (item, typ), total in report.items() %}
      <tr>
        <td>{{ item }}</td>
        <td>{{ typ }}</td>
        <td>{{ total | currency_format }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}