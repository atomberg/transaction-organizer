{% extends "base.html.j2" %}
{% block title %}Parse Poynt Reports{% endblock %}

{% block scripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.5.1/dropzone.js" 
  integrity="sha256-awEOL+kdrMJU/HUksRrTVHc6GA25FvDEIJ4KaEsFfG4=" 
  crossorigin="anonymous"></script>
{% endblock %}

{% block content %}
<div class="row">
  <div class="col-lg-12 text-center">
    <h1>Parse reports</h1>
    <p class="lead">Upload the Excel files containing the reports to be parsed.</p>
  </div>
</div>

<div>
  <form method=post enctype=multipart/form-data>
    <p>
      <label for=transactions_file>Transactions report:</label>
      <input id=transactions_file type=file name=transactions>
    </p>

    <p>
      <label for=transactions_file>Items report:</label>
      <input id=items_file type=file name=items>
    </p>

    <input type=submit value=Upload>
  </form>
</div>

{% endblock %}