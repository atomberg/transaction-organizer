{% extends "base.html.j2" %}
{% block title %}All transactions{% endblock %}

{% block scripts %}
<script>
  $(document).ready(function () {
    $("#people-nav").removeClass("active");
    $("#transactions-nav").addClass("active");
    $("#add-person-nav").removeClass("active");
    $("#add-transaction-nav").removeClass("active");
    $("#export-nav").removeClass("active");

    $("#table_id").DataTable({
      "stateSave": true,
      "lengthMenu": [50, 75, 100],
      "order": [],
      "infoCallback": function( settings, start, end, max, total, pre ) {
        var api = this.api();
        var totalAmount = api.column( 3, { page: 'current' } ).data().reduce( 
          function (a, b) { return a + parseFloat(b); }, 0.0 
        );
        return 'Showing ' + start + ' to ' + end + ' of ' + total + ' entries ' + 
          '(total amount of $' + totalAmount.toFixed(2) + ')';
      }      
    });
  });
</script>
{% endblock %}

{% block taskbar %}
<div class="navbar-collapse collapse">
  <ul class="navbar-nav ml-auto">
    <li class="nav-item">
      <a class="nav-link" id="export-nav" href="{{ url_for('show_export_info') }}">Export</a>
    </li>
  </ul>
</div>
{% endblock %}

{% block content %}
<div class="row">
  <div class="col-lg-12 text-center">
    <h1>All your transactions</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <p class="lead">
      <form id="filter" class="form-inline justify-content-center">
        <input name="begin" form="filter" class="form-control-sm mr-sm-1" type="date" , value="{{ begin }}">
        <input name="end" form="filter" class="form-control-sm mr-sm-1" type="date" value="{{ end }}">
        <button type="submit" form="filter" class="btn btn-success btn-sm mr-sm-1">
          <i class="fa fa-search"></i>
        </button>
        <button type="reset" form="filter" class="btn btn-danger btn-sm mr-sm-1">
          <i class="fa fa-times"></i>
        </button>
      </form>
    </p>
  </div>
</div>

<div>
  <table id="table_id" class="table table-striped table-bordered" cellspacing="0" style="width:100%">
    <thead>
      <tr>
        <th>Person</th>
        <th>Date</th>
        <th>Method</th>
        <th>Amount</th>
        <th>Accepted by</th>
        <th>Memo</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for transaction in transactions %}
      <tr>
        <td>{{ transaction.person.full_name }}</td>
        <td>{{ transaction.date }}</td>
        <td>{{ transaction.method }}</td>
        <td>{{ transaction.amount | currency_format }}</td>
        <td>{{ transaction.accepted_by }}</td>
        <td>{{ transaction.memo or '' }}</td>
        <td>
          <a href="{{ url_for('transaction_view', transaction_id=transaction.id) }}" class="btn btn-success btn-sm">
            <i class="fa fa-pencil"></i> 
          </a>
          {% if transaction.receipt %}
            <i class="fa fa-check" style="color:green"></i>
          {% endif %}
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}