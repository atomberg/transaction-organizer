{% extends "base.html.j2" %}
{% block title %}Add a new person{% endblock %}

{% block scripts %}
<script type="text/javascript">
  $(document).ready(function () {
    $("#people-nav").removeClass("active");
    $("#transactions-nav").removeClass("active");
    $("#add-person-nav").addClass("active");
    $("#add-transaction-nav").removeClass("active");
    $("#export-nav").removeClass("active");
  });
</script>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-12 text-center">
        <h1>Add a new person</h1>
        <p class="lead">Would you like to edit me or add some notes?</p>
    </div>
</div>

<div class="row">
  <form id="add" method="POST" action="{{ url_for('persons.add') }}">
  <table id="table_id" class="table">
    <tbody>
      <tr>
        <th>Last name</th>
        <td>
          <input name="last_name" form="add" class="form-control" type="text" placeholder="Last name">
        </td>
        <th>First name</th>
        <td>
          <input name="first_name" form="add" class="form-control" type="text" placeholder="First name">
        </td>
      </tr>
      <tr>
        <th>Email</th>
        <td>
          <input name="email" form="add" class="suppliers form-control" type="text" placeholder="Email">
        </td>
        <th>Phone number</th>
        <td><input name="phone" form="add" class="form-control" type="text" placeholder="Phone number"></td>
      </tr>
      <tr>
        <th>Address</th>
        <td colspan="3">
          <textarea name="address" form="add" class="categories form-control"
            rows="3" placeholder="{{ '123 Street\nCity, Province\nPostal Code' }}"></textarea>
        </td>
      </tr>
      <tr>  
        <td></td>
        <td></td>
        <td></td>
        <td>
            <input type="submit" form="add" value="Add person" class="btn btn-success">
        </td>
      </tr>
    </tbody>
  </table>
  </form>
</div>
{% endblock %}